<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Profile"
        android:textColor="@color/darkMaroon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:padding="10dp"
        android:id="@+id/txtProfile"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blank_profile"
        android:id="@+id/profileImg"
        android:layout_below="@+id/txtProfile"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_Elizabeth"
        android:layout_below="@+id/profileImg"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_marginStart="100dp"
        android:id="@+id/txtName"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_no_1234567890"
        android:layout_below="@id/txtName"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginStart="100dp"
        android:id="@+id/txtContactNo"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_id_mafiya_gmail_com"
        android:layout_below="@id/txtContactNo"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginStart="100dp"
        android:id="@+id/txtEmailID"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address_abc123_mumbai"
        android:layout_below="@id/txtEmailID"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:id="@+id/txtAddress"
        android:layout_marginStart="100dp"
        android:textStyle="bold"/>







</RelativeLayout>